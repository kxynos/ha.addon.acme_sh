{
  "name": "ACME.sh Certs",
  "version": "2.1.3",
  "slug": "acme_sh",
  "description": "Manage certificates with ACME.sh for local CA",
  "url": "https://github.com/kxynos/ha.addon.acme_sh",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "once",
  "boot": "manual",
  "init": false,
  "map": ["ssl:rw"],
  "options": {
    "account": "str",
    "server": "ca.local",
    "domains": [null],
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "rootcertfile":"str"
  },
  "schema": {
    "account": "str",
    "server": "str",
    "domains": ["str"],
    "certfile": "str",
    "keyfile": "str",
    "rootcertfile": "str"
  }
}
